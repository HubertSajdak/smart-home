{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@smart-home/device/data-access-device": ["libs/device/data-access-device/src/index.ts"],
      "@smart-home/device/feature-device-dashboard": ["libs/device/feature-device-dashboard/src/index.ts"],
      "@smart-home/device/theme": ["libs/device/theme/src/index.ts"],
      "@smart-home/device/ui-device-list": ["libs/device/ui-device-list/src/index.ts"],
      "@smart-home/feature-device-list": ["libs/feature-device-list/src/index.ts"],
      "@smart-home/shared/theme/smart-home-theme": ["libs/shared/theme/smart-home-theme/src/index.ts"],
      "@smart-home/shared/utils/routes": ["libs/shared/utils/routes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", ".github"]
}
